<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="815px"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/title_car_type"
        android:layout_width="815px"
        android:layout_height="42px"
        android:text="차종 추가 / 수정 / 삭제"
        android:gravity="center"
        android:background="#3a3a3a"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        />
    <LinearLayout
        android:layout_width="815px"
        android:layout_height="44px"
        >
        <TextView
            android:layout_width="190px"
            android:layout_height="44px"
            android:text="차종명"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15px"
            android:paddingLeft="44px"
            />
        <EditText
            android:id="@+id/car_type_title"
            android:layout_width="625px"
            android:layout_height="44px"
            android:hint="차종 구분 (예:소형, 중형, 대형 ... )"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textSize="15px"
            android:background="@null"
            android:paddingLeft="20px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        />
    <LinearLayout
        android:layout_width="815px"
        android:layout_height="44px"
        >
        <TextView
            android:layout_width="190px"
            android:layout_height="44px"
            android:text="최초무료시간 (분)"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15px"
            android:paddingLeft="44px"
            />
        <EditText
            android:id="@+id/minute_free"
            android:layout_width="625px"
            android:layout_height="44px"
            android:hint="최초무료시간"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textSize="15px"
            android:background="@null"
            android:paddingLeft="20px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        />
    <LinearLayout
        android:layout_width="815px"
        android:layout_height="44px"
        >
        <TextView
            android:layout_width="190px"
            android:layout_height="44px"
            android:text="기본요금 (원)"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15px"
            android:paddingLeft="44px"
            />
        <EditText
            android:id="@+id/basic_amount"
            android:layout_width="625px"
            android:layout_height="44px"
            android:hint="기본요금"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textSize="15px"
            android:background="@null"
            android:paddingLeft="20px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        />
    <LinearLayout
        android:layout_width="815px"
        android:layout_height="44px"
        >
        <TextView
            android:layout_width="190px"
            android:layout_height="44px"
            android:text="기본시간 (분)"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15px"
            android:paddingLeft="44px"
            />
        <EditText
            android:id="@+id/basic_minute"
            android:layout_width="625px"
            android:layout_height="44px"
            android:hint="기본시간 (분) (1시간 : 60, 12시간 : 720, 24시간 : 1440)"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textSize="15px"
            android:background="@null"
            android:paddingLeft="20px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        />
    <LinearLayout
        android:layout_width="815px"
        android:layout_height="44px"
        >
        <TextView
            android:layout_width="190px"
            android:layout_height="44px"
            android:text="추가요금 (원)"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15px"
            android:paddingLeft="44px"
            />
        <EditText
            android:id="@+id/amount_unit"
            android:layout_width="625px"
            android:layout_height="44px"
            android:hint="추가요금"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textSize="15px"
            android:background="@null"
            android:paddingLeft="20px"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e4e4e4"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        />
    <LinearLayout
        android:layout_width="815px"
        android:layout_height="44px"
        >
        <TextView
            android:layout_width="190px"
            android:layout_height="44px"
            android:text="추가요금 단위(분)"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="15px"
            android:paddingLeft="44px"
            />
        <EditText
            android:id="@+id/minute_unit"
            android:layout_width="625px"
            android:layout_height="44px"
            android:hint="추가요금 단위(분)"
            android:gravity="center_vertical"
            android:inputType="number"
            android:textSize="15px"
            android:background="@null"
            android:paddingLeft="20px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="815px"
        android:layout_height="33px"
        >
        <Button
            android:id="@+id/insert_cartype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="추가"
            android:visibility="gone"
            android:background="#1dbd92"
            android:textSize="16px"
            android:textColor="@android:color/white"
            />
        <Button
            android:id="@+id/update_cartype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="수정"
            android:visibility="gone"
            android:background="#1dbd92"
            android:textSize="16px"
            android:textColor="@android:color/white"
            />
        <Button
            android:id="@+id/delete_cartype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="삭제"
            android:visibility="gone"
            android:background="#fc604e"
            android:textSize="16px"
            android:textColor="@android:color/white"
            />
        <Button
            android:id="@+id/close_cartype"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="닫기"
            android:background="#028ecf"
            android:textSize="16px"
            android:textColor="@android:color/white"
            />
    </LinearLayout>
</LinearLayout>