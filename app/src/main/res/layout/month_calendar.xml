<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="829px"
        android:layout_height="38px"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/month_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="월차목록"
            android:textSize="15px"
            android:textColor="#ffdf5f"
            android:background="#4c4c4c"
            />
        <TextView
            android:id="@+id/month_expired"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="만료목록"
            android:textSize="15px"
            android:textColor="#ffdf5f"
            android:background="#4c4c4c"
            />
        <TextView
            android:id="@+id/month_wait"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="대기목록"
            android:textSize="15px"
            android:textColor="#ffdf5f"
            android:background="#4c4c4c"
            />
        <TextView
            android:id="@+id/month_calendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="월차달력"
            android:textSize="15px"
            android:textColor="#ffdf5f"
            android:background="#4c4c4c"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white"
        >
        <LinearLayout
            android:layout_width="753px"
            android:layout_height="55px"
            android:paddingLeft="30px"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="55px"
                android:gravity="center_vertical"
                android:textSize="25px"
                android:textColor="@android:color/black"
                android:text="Agust 2017"
                />
            <Button
                android:id="@+id/prevButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지난달"
                android:textSize="25px"
                android:visibility="gone"
                />
            <Button
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음달"
                android:textSize="25px"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="753px"
            android:layout_height="23px"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="753px"
                android:layout_height="23px"
                android:orientation="horizontal"
                android:paddingLeft="30px"
                >
                <TextView
                    android:layout_width="107px"
                    android:layout_height="23px"
                    android:textSize="11px"
                    android:text="일요일"
                    android:paddingLeft="10px"
                    android:gravity="center_vertical"
                    android:textColor="#e43d3d"
                    />
                <TextView
                    android:layout_width="107px"
                    android:layout_height="23px"
                    android:textSize="11px"
                    android:text="월요일"
                    android:paddingLeft="10px"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="107px"
                    android:layout_height="23px"
                    android:textSize="11px"
                    android:text="화요일"
                    android:paddingLeft="10px"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="107px"
                    android:layout_height="23px"
                    android:textSize="11px"
                    android:text="수요일"
                    android:paddingLeft="10px"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="107px"
                    android:layout_height="23px"
                    android:textSize="11px"
                    android:text="목요일"
                    android:paddingLeft="10px"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="107px"
                    android:layout_height="23px"
                    android:textSize="11px"
                    android:text="금요일"
                    android:paddingLeft="10px"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="107px"
                    android:layout_height="23px"
                    android:textSize="11px"
                    android:text="토요일"
                    android:paddingLeft="10px"
                    android:gravity="center_vertical"
                    android:textColor="#5da6f1"
                    />
            </LinearLayout>
            <View
                android:layout_width="753px"
                android:layout_height="1px"
                android:layout_marginLeft="30px"
                android:background="#c0c0c0"
                />
            <GridView
                android:id="@+id/calGrid"
                android:layout_width="753px"
                android:layout_height="488px"
                android:numColumns="7"
                android:layout_marginLeft="30px"
                android:layout_marginTop="9px"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>